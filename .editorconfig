# EditorConfig configuration for consistent code style across all files
root = true

# Default settings for all files
[*]
# Set character encoding to UTF-8
charset = utf-8

# Use LF (Line Feed) line endings for consistency across OSes (Unix style)
end_of_line = lf

# Insert a final newline at the end of files (prevents issues with some tools)
insert_final_newline = true

# Trim trailing whitespace characters (prevents unnecessary space in diffs)
trim_trailing_whitespace = true

# Set indentation to 2 spaces (consistent with most modern projects)
indent_style = space
indent_size = 2

# Set maximum line length to 80 characters (for better readability)
max_line_length = 80

# Ensure that files do not end with extra blank lines
insert_spaces = true
